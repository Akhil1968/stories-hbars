<h1>{{story.title}}</h1>
<h6>Created by <code>{{story.author}} on {{story.created_at}} </code></h6>
<br>
    <img src="{{story.imageLink}}" width="300" class="img-responsive"/>
<br>
<div class="well">
    <h4>Story:</h4>
    {{story.content}}
</div>
<br>
<div class="well">
    <h4>Comments:</h4>
    {{#each story.comments}}
        <p> <code>{{this.body}}</code></p>
        <h6>Commented by <code>{{this.commented_by}} on {{this.date}}</code></h6>
        <br>
    {{/each}}
    {{#if loggedout}}
    {{else}}
        <form method="post" action="/stories/{{story.slug}}/saveComment">
        <div class="form-group">
            <label for="message" class="col-sm-2 control-label">Add your comments: </label>
                <div class="col-sm-6">
                    <textarea class="form-control" required name="comment" rows="4" placeholder="Add your commments "></textarea>
                </div>
        </div>
        <div class="form-group">
            <div class="">
            <button type="submit" class="btn btn-primary">Submit Comment</button>
            </div>
        </div>
        </form>
    {{/if}}
</div>
                    
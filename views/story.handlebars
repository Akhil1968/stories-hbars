<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{story.title}}</title>
    {{>head}}
    <style>
    p{font-size: 16px;}
    </style>
</head>
<body>
    <div id="wrapper">
      {{>sidebarMenu}}
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                      <a href="#menu-toggle" class="btn btn-success" id="menu-toggle">Toggle Screen</a><br/><br/>
                       <h1>{{story.title}}</h1>
                       <h4>Created by <code>{{story.author}} on {{story.created_at}} </code></h4>
                       <br/><br/>
                          <img src="{{story.imageLink}}" width="400" class="img-circle"/>
                       <br/>
                       {{story.content}}
                       <br/><br/>

                       {{#each story.comments}}
                                 <p>{{this.body}}</p>
                                 <h4>Commented by <code>{{this.commented_by}} on {{this.date}}</code></h4>
                                 <br/><br/>
                       {{/each}}
                       {{#if loggedIn}}
                         <form method="post" action="/stories/<%-story.slug%>/saveComment">
                           <div class="form-group">
                               <label for="message" class="col-sm-2 control-label">Add your comments: </label>
                                   <div class="col-sm-6">
                                      <textarea class="form-control" required name="comment" rows="4" placeholder="Add your commments "></textarea>
                                   </div>
                            </div>
                            <div class="form-group">
                              <div class="">
                                <button type="submit" class="btn btn-primary">Submit Comment</button>
                              </div>
                            </div>
                         </form>
                       {{/if}}
                    </div>
              </div>
          </div>
      </div>
    </div>
    {{>jsIncludes}}

    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
</body>
</html>
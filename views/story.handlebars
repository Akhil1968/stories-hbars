<h1>{{story.title}}</h1>
<h4>Created by <code>{{story.author}} on {{story.created_at}} </code></h4>
<br>
    <img src="{{story.imageLink}}" width="300" class="img-circle"/>
<br>
<div class="well">
    {{story.content}}
</div>
<br>

{{#each story.comments}}
            <p>{{this.body}}</p>
            <h4>Commented by <code>{{this.commented_by}} on {{this.date}}</code></h4>
            <br/><br/>
{{/each}}
{{#if loggedout}}
{{else}}
    <form method="post" action="/stories/<%-story.slug%>/saveComment">
    <div class="form-group">
        <label for="message" class="col-sm-2 control-label">Add your comments: </label>
            <div class="col-sm-6">
                <textarea class="form-control" required name="comment" rows="4" placeholder="Add your commments "></textarea>
            </div>
    </div>
    <div class="form-group">
        <div class="">
        <button type="submit" class="btn btn-primary">Submit Comment</button>
        </div>
    </div>
    </form>
{{/if}}
                    

  <form action="/add-story" method="post">
      <div class="form-group">
          <label for="name" class="col-sm-2 control-label">Title</label>
          <input type="text" name="title" required class="form-control" placeholder="Story Title"/>
      </div><br>
      <div class="form-group">
          <label for="name" class="col-sm-2 control-label">Image Link</label>
          <input type="text" name="imageLink" required class="form-control" placeholder="Upload the image to imgur and put the direct link here"/>
      </div>
      <br>
      <div class="form-group">
          <label for="message" class="col-sm-2 control-label">Summary</label>
          <textarea class="form-control" required name="summary" rows="4" placeholder="A short description"></textarea>
      </div><br>
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Post</label>
          <textarea name="content" id="storyContent" required rows="8" class="form-control"></textarea>
      </div>
      <div class="form-group">
              <button type="submit" class="btn btn-primary">Submit your Story</button>
      </div>
</form>
<br>
<script>
$(document).ready(function() {
    $('#storyContent').summernote({
      height:250,
      toolbar: [
      ['style', ['bold', 'italic', 'underline', 'clear']],
      ['font', ['strikethrough', 'superscript', 'subscript']],
      ['fontsize', ['fontsize']],
      ['color', ['color']],
      ['para', ['ul', 'ol', 'paragraph']],
      ['height', ['height']],
      ['link', ['linkDialogShow', 'unlink']],
      ['table', ['table']]
              ]
    });
});
</script>

